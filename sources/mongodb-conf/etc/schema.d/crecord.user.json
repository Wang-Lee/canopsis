{
	"type": "object",
	"categories": [{
		"title": "General",
		"keys":["crecord_name"]
	},{
		"title": "Role",
		"keys": ["user_role"]
	},{
		"title": "Groups",
		"keys": ["user_groups"]
	},{
		"title": "Rights",
		"keys": ["user_rights"]
	}],
	"properties": {
		"crecord_type": {
			"enum": ["account"],
			"required": true,
			"default": "account",
			"icon": "user"
		},
		"_id": {
			"type": "string"
		},
		"ui_language": {
			"type": "string",
			"enum": ["fr", "en"],
			"role": "simplelist"
		},
		"authkey": {
			"type": "string",
			"required": true,
			"readOnly": true
		},
		"user_groups": {
			"type": "object"
		},
		"user_role": {
			"type": "string",
			"role": "classifiedcrecordselector",
			"multiselect": false,
			"crecordtype": "role",
			"valuekey" : "id"
		},
		"user_rights": {
			"type": "object",
			"role": "rights",
			"valuekey" : "_id"
		},
		"external": {
			"type": "boolean",
			"required": true
		},
		"firstname": {
			"type": "string",
			"readOnly": true
		},
		"lastname": {
			"type": "string",
			"readOnly": true
		},
		"user_contact": {
			"type": "string",
			"required": true,
			"readOnly": true
		},
		"mail": {
			"type": "string",
			"required": true,
			"role": "mail"
		}

	}
}
