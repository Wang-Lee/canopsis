{
	"type": "object",
	"categories": [{
		"title": "General",
		"keys": ["subject", "template", "attachments", "html"]
	},{
		"title": "SMTP",
		"keys": ["smtp_host", "smtp_port"]
	}],
	"properties": {
		"user": {"type": "string", "required": true},
		"group": {"type": "string", "required": true},
		"sender": {"type": "string", "required": true},
		"recipients": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"required": true
		},
		"subject": {"type": "string", "required": true},
		"template": {"type": "string", "required": true},
		"template_data": {"type": "object", "required": true},
		"attachments": {
			"type": "array",
			"items": {"type": "string"},
			"required": true
		},
		"smtp_host": {"type": "string", "required": true, "default": "localhost"},
		"smtp_port": {"type": "integer", "required": true, "default": 25},
		"html": {"type": "boolean", "required": true, "default": false}
	}
}