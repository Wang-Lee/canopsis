{
	"type": "object",
	"categories": [{
		"title": "General",
		"keys":["timestamp", "component", "resource", "state", "output"]
	}],
	"showEditButton": true,
	"properties": {
		"event_type": {
			"type": "string",
			"required": true,
			"role": "eventtype"
		},
		"source_type": {
			"type": "string",
			"required": true
		},
		"crecord_type": {
			"enum": ["account"],
			"required": true,
			"default": "account",
			"icon": "flag"
		},
		"ack": {
			"type": "object",
			"role": "ack"
		},
		"ticket_declared_author": {
			"type": "string"
		},
		"ticket_declared_date": {
			"type": "number"
		},
		"ticket": {
			"type": "string",
			"title":"ticket"
		},
		"last_state_change": {
			"type": "integer",
			"role": "timestamp"
		},
		"ticket_date": {
			"type": "number"
		},
		"keep_state": {
			"type": "boolean"
		},
		"timestamp": {
			"type": "number",
			"role": "timestamp",
			"canDisplayAgo" : true
		},
		"component": {
			"type": "string",
			"required": true
		},
		"resource": {
			"type": "string",
			"required": true,
			"readOnly": true
		},
		"connector": {
			"type": "string",
			"required": true,
			"role": "source"
		},
		"connector_name": {
			"type": "string",
			"required": true
		},
		"output": {
			"type": "string",
			"role": "richtext",
			"required": true,
			"description": "output of the event",
			"title": "Output"
		},
		"state": {
			"type": "number",
			"required": true,
			"role": "criticity",
			"title":"criticity"
		},
		"perimeter": {
			"type": "string"
		},
		"domain": {
			"type": "string"
		},
		"status": {
			"type": "number",
			"role": "status"
		},
		"cancel": {
			"type": "object",
			"role": "object"
		},
		"author": {
			"type": "string"
		}
	}
}
