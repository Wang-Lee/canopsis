[{
	"name":  "TimeGraph",
	"version": 0.2,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype":"timegraph",
	"description": "Displays time series on interactive customizable graph.",
	"description-fr":"Affiche des s√©ries temporelles sur un graphique interactif et personalisable.",
	"refreshInterval": 300,
	"locales": ["en", "fr"],
	"options": [
		{
			"title": "Options",
			"items": [
				{
					"xtype": "cfieldset",
					"title": "Default graph options",
					"items": [
						{
							"xtype": "combobox",
							"fieldLabel": "Series Type",
							"name": "SeriesType",
							"queryMode": "local",
							"displayField": "text",
							"valueField": "value",
							"value": "area",
							"store": {
								"xtype": "store",
								"fields": ["value", "text"],
								"data": [
									{"value": "area", "text": "Area"},
									{"value": "line", "text": "Line"},
									{"value": "bars", "text": "Bars"}
								]
							}
						},{
							"xtype": "checkbox",
							"fieldLabel": "Stacked",
							"name": "stacked_graph",
							"checked": false
						},{
							"xtype": "cduration",
							"fieldLabel": "Time window offset",
							"name": "time_window_offset",
							"value": 0
						},{
							"xtype": "checkbox",
							"fieldLabel": "History navigation",
							"name": "timeNav",
							"checked": false
						},{
							"xtype": "cduration",
							"fieldLabel": "History time window",
							"name": "timeNav_window",
							"value": 604800
						},{
								"xtype" : "numberfield",
								"name" : "lineWidth",
								"fieldLabel": "Line Width",
								"minValue": 1,
								"value": 1
						}
					]
				},{
					"xtype": "cfieldset",
					"title": "Tooltip",
					"items": [
						{
							"xtype": "checkbox",
							"fieldLabel": "Enable Tooltip",
							"checked": true,
							"name": "tooltip"
						}
					]
				}
			]
		},{
			"title": "Style",
			"advanced": true,
			"items": [{
					"xtype": "cfieldset",
					"title": "Grid",
					"items": [
						{
							"xtype": "checkbox",
							"name": "displayVerticalLines",
							"fieldLabel": "Display vertical lines",
							"value": false
						},
						{
							"xtype": "checkbox",
							"name": "displayHorizontalLines",
							"fieldLabel": "Display horizontal lines",
							"value": true
						}
					]
				}
			]
		},{
			"title": "Choose Metrics",
			"items": [
				{
					"xtype": "cmetric",
					"name": "nodes",
					"multiSelect": true,
					"metrics": true,
					"sharedStore": "timegraph",
					"additional_field": [
						"label",
						"curve_type",
						"curve_color",
						"area_color",
						"trend_curve",
						"u",
						"yAxis"
					]
				}
			]
		},{
			"title": "Customize Metrics",
			"advanced": true,
			"items": [
				{
					"xtype": "ccustom",
					"sharedStore": "timegraph",
					"customForm": [
						{
							"xtype": "textfield",
							"fieldLabel": "Custom Label",
							"name": "label",
							"emptyText": "Type custom label here..."
						},{
							"xtype": "textfield",
							"fieldLabel": "Unit",
							"name": "u"
						},{
							"xtype": "numberfield",
							"fieldLabel": "Y axis",
							"name": "yAxis",
							"min": 0
						},{
							"xtype": "checkbox",
							"fieldLabel": "Trend",
							"name": "trend_curve",
							"checked": false
						},{
							"xtype": "numberfield",
							"fieldLabel": "Custom Warning threshold",
							"name": "threshold_warn"
						},{
							"xtype": "numberfield",
							"fieldLabel": "Custom Critical threshold",
							"name": "threshold_crit"
						},{
							"xtype": "combobox",
							"fieldLabel": "Curve Type",
							"name": "curve_type",
							"queryMode": "local",
							"displayField": "text",
							"valueField": "value",
							"value": "default",
							"store": {
								"xtype": "store",
								"fields": ["value", "text"],
								"data": [
									{"value": "default", "text": "Default"},
									{"value": "area",    "text": "Area"},
									{"value": "line",    "text": "Line"},
									{"value": "bars",    "text": "Bars"}
								]
							}
						},{
							"xtype": "ccolorfield",
							"fieldLabel": "Curve color",
							"name": "curve_color",
							"replaceWhiteColor": true
						},{
							"xtype": "ccolorfield",
							"fieldLabel": "Area color",
							"name": "area_color",
							"replaceWhiteColor": true
						},{
							"xtype": "combobox",
							"fieldLabel": "Point shape",
							"name": "point_shape",
							"queryMode": "local",
							"displayField": "text",
							"valueField": "value",
							"value": "default",
							"store": {
								"xtype": "store",
								"fields": ["value", "text"],
								"data": [
									{"value": "undefined", "text": "Point"},
									{"value": "circle",    "text": "Circle"},
									{"value": "square",    "text": "Square"},
									{"value": "diamond",    "text": "Diamond"},
									{"value": "triangle",    "text": "Triangle"},
									{"value": "cross",    "text": "Cross"}
								]
							}
						}
					]
				}
			]
		}
	]
}]

