[{
	"name":  "EventCalendar",
	"verions": 0.1,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype":"eventcalendar",
	"description": "Event calendar.",
	"description-fr": "affiche le calendrier des Ã©venements",
	"refreshInterval": 300,
	"locales": ["en","fr"],

	"options":[{
		"title": "Options",
			"items": [
					{
						"xtype": "cfieldset",
						"title": "Options",
						"items": [
						{
							"xtype" : "checkboxfield",
							"name" : "editable",
							"fieldLabel": "Editable"
					   },{
							"xtype" : "textfield",
							"name" : "tags",
							"fieldLabel": "Tags to show in the calendar (separated by commas)",
							"allowBlank": true
					   },{
							"xtype" : "textfield",
							"name" : "ics_sources",
							"fieldLabel": "Calendar event feeds (separated by commas)",
							"allowBlank": true
					   }]
					}]
	},{
		"title": "Display",
			"items": [
				{
						"xtype": "cfieldset",
						"title": "Default view",
						"items": [
							{
								"xtype" : "textfield",
								"name" : "defaultView",
								"fieldLabel": "Default view",
								"value": "month"
							}]
					},{
						"xtype": "cfieldset",
						"title": "Header",
						"items": [
							{
								"xtype" : "textfield",
								"name" : "header_left",
								"fieldLabel": "left part of the header",
								"allowBlank": true,
								"value": "prev,next today"
							},{
								"xtype" : "textfield",
								"name" : "header_center",
								"fieldLabel": "center part of the header",
								"allowBlank": true,
								"value": "title"
							},{
								"xtype" : "textfield",
								"name" : "header_right",
								"fieldLabel": "right part of the header",
								"allowBlank": true,
								"value": "month,agendaWeek,agendaDay"
							}]
					},{
						"xtype": "cfieldset",
						"title": "Event view popup columns",
						"items": [{
								"xtype": "checkbox",
								"fieldLabel": "Component",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_component"
							},{
								"xtype": "checkbox",
								"fieldLabel": "Resource",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_resource"
							},{
								"xtype": "checkbox",
								"fieldLabel": "State",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_state"
							},{
								"xtype": "checkbox",
								"fieldLabel": "State type",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_state_type"
							},{
								"xtype": "checkbox",
								"fieldLabel": "Source type",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_source_type"
							},{
								"xtype": "checkbox",
								"fieldLabel": "Last check",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_last_check"
							},{
								"xtype": "checkbox",
								"fieldLabel": "Output",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_output"
							},{
								"xtype": "checkbox",
								"fieldLabel": "Tags",
								"inputValue": true,
								"uncheckedValue": false,
								"checked": true,
								"name": "opt_show_tags"
							}]
					}]
	},{
		"title": "Style",
			"items": [{
						"xtype": "combobox",
						"name": "event_display_size",
						"fieldLabel": "Event display size",
						"queryMode": "local",
						"displayField": "text",
						"valueField": "value",
						"value": null,
						"allowBlank": false,
						"value": "normal_size",
						"store": {
							"xtype": "store",
							"fields": ["value", "text"],
							"data" : [
								{"value": "tiny_size", "text": "Tiny"},
								{"value": "small_size", "text": "Small"},
								{"value": "normal_size", "text": "Normal"},
								{"value": "big_size", "text":  "Big"},
								{"value": "huge_size", "text":  "Huge"}
						]}
				},{
					"fieldLabel": "Default events color",
					"name": "defaultEventColor",
					"xtype":"ccolorfield",
					"value": "#3a87ad"
				}
				]
	},{
		"title": "Customize sources",
		"items" : [{
					"xtype": "ccomponentlist",
					"name" : "sources",
					"showResource": false,
					"event_type": "calendar",
					"base_filter" : {"$or":[{"event_type":"calendar"}]},
					"idKey" : "component",
					"addForm": [{
								"xtype" : "textfield",
								"name" : "component",
								"fieldLabel": "Source name",
								"allowBlank": false
							}],
					"additional_field": {
											"xtype":"textfield",
											"name":"color",
											"emptyText":"Color of events",
											"hideLabel": true
										}
				}]
	}]
}]
