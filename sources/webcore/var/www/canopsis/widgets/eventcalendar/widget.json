[{
	"name":  "EventCalendar",
	"verions": 0.1,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype":"eventcalendar",
	"description": "Event calendar.",
	"description-fr": "affiche le calendrier des Ã©venements",
	"refreshInterval": 300,
	"locales": ["en","fr"],

	"options":[{
		"title": "Options",
			"items": [
					{
						"xtype": "cfieldset",
						"title": "Options",
						"items": [
						{
							"xtype" : "checkboxfield",
							"name" : "editable",
							"fieldLabel": "Editable"
					   },{
							"xtype" : "textfield",
							"name" : "tags",
							"fieldLabel": "Tags to show in the calendar (separated by commas)",
							"allowBlank": true
					   },{
							"xtype" : "textfield",
							"name" : "ics_sources",
							"fieldLabel": "Calendar event feeds (separated by commas)",
							"allowBlank": true
					   }]
					}]
	},{
		"title": "Display",
			"items": [
				{
						"xtype": "cfieldset",
						"title": "Default view",
						"items": [
							{
								"xtype" : "textfield",
								"name" : "defaultView",
								"fieldLabel": "Default view",
								"value": "month"
							}]
					},{
						"xtype": "cfieldset",
						"title": "Header",
						"items": [
							{
								"xtype" : "textfield",
								"name" : "header_left",
								"fieldLabel": "left part of the header",
								"allowBlank": true,
								"value": "prev,next today"
							},{
								"xtype" : "textfield",
								"name" : "header_center",
								"fieldLabel": "center part of the header",
								"allowBlank": true,
								"value": "title"
							},{
								"xtype" : "textfield",
								"name" : "header_right",
								"fieldLabel": "right part of the header",
								"allowBlank": true,
								"value": "month,agendaWeek,agendaDay"
							}]
					}]
	},{
		"title": "Style",
			"items": [
				{
					"xtype": "radiogroup",
					"fieldLabel": "event display size",
					"columns": 1,
					"vertical": true,
					"items": [
						{ "boxLabel": "tiny",   "name": "rb", "inputValue": "1" },
						{ "boxLabel": "small",  "name": "rb", "inputValue": "2", "checked": true},
						{ "boxLabel": "normal", "name": "rb", "inputValue": "3" },
						{ "boxLabel": "big",    "name": "rb", "inputValue": "4" },
						{ "boxLabel": "huge",   "name": "rb", "inputValue": "5" }
					]
				},{
					"fieldLabel": "stacked events color",
					"xtype":"ccolorfield"
				}
				]
	},{
		"title": "Customize sources",
		"items" : [{
					"xtype": "ccard",
					"edit": true
				}
		]
	}]
}]
