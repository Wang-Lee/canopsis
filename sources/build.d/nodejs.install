NAME="nodejs"

BASE="node-v$VERSION"
LOG="$LOG_PATH/$NAME.log"
rm -f $LOG &> /dev/null

FCHECK="$PREFIX/bin/node"

function build(){
  true
}

function install(){
  cd $SRC_PATH/externals

  BASE=$BASE-linux-x64
  if [ ! -e $BASE ]; then
    extract_archive "$BASE.tar.gz"
  fi
  cd $BASE

  cp -R * $PREFIX/
  check_code $? 'Impossible to install ...'
}
